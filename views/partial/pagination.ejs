<div class="container border border-info my-3" >

<nav aria-label="Page navigation example">
    <ul class="pagination pagination-lg justify-content-center">
        <% if (currentPage > 1) { %>
            <li class="page-item mx-2"><a class="page-link" href="/?page=<%= currentPage - 1 %>">Previous</a></li>
        <% } else { %>
            <li class="page-item disabled mx-2"><a class="page-link" href="#">Previous</a></li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class=" mx-2 page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/?page=<%= i %>"><%= i %></a>                 
            </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="mx-2 page-item"><a class="page-link" href="/?page=<%= currentPage + 1 %>">Next</a></li>
        <% } else { %>
            <li class="mx-2 page-item disabled"><a class="page-link" href="#">Next</a></li>
        <% } %>
    </ul>
</nav>

</div>

